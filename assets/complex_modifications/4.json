{
  "title": "command+option+control+ ijkl を矢印キーにに割り当てる",
  "rules": [
    {
      "description": "command+option+control+i を上矢印に割り当てる",
      "manipulators": [
        {
          "type" : "basic",
          "from" : {
            "key_code": "i",
            "modifiers":{
               "mandatory":["left_command", "left_option", "left_control"]
            }
          },
          "to": [{"key_code": "up_arrow"}]
        }]
    },
    {
      "description": "command+option+control+j を左矢印に割り当てる",
      "manipulators": [
        {
          "type" : "basic",
          "from" : {
            "key_code": "j",
            "modifiers":{
               "mandatory":["left_command", "left_option", "left_control"]
            }
          },
          "to": [{"key_code": "left_arrow"}]
        }]
    },
    {
      "description": "command+option+control+k を下矢印に割り当てる",
      "manipulators": [
        {
          "type" : "basic",
          "from" : {
            "key_code": "k",
            "modifiers":{
               "mandatory":["left_command", "left_option", "left_control"]
            }
          },
          "to": [{"key_code": "down_arrow"}]
        }]
    },
    {
      "description": "command+option+control+l を右矢印に割り当てる",
      "manipulators": [
        {
          "type" : "basic",
          "from" : {
            "key_code": "l",
            "modifiers":{
               "mandatory":["left_command", "left_option", "left_control"]
            }
          },
          "to": [{"key_code": "right_arrow"}]
        }]
    }
  ]
}
